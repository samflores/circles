<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <%= link_to new_profile_session_path, class: 'nav-link', role: 'tab', 'aria-selected': 'true' do %>
      <i class="icofont-sign-in"></i> Sign In
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to new_profile_registration_path, class: 'nav-link active', role: 'tab', 'aria-selected': 'false' do %>
      <i class="icofont-users-alt-4"></i> Registration
    <% end %>
  </li>
</ul>
<div class="tab-content">
  <div class="tab-pane registration-tab fade show active" id="registration-tab" role="tabpanel">
    <h3 class="item-title">Sign Up Your Account</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.text_field :full_name, class: 'form-control', autofocus: true, placeholder: 'Full Name' %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'Type Password' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation,
                             class: 'form-control',
                             autocomplete: 'off',
                             placeholder: 'Confirm Password' %>
      </div>
      <div class="form-group">
        <%= f.date_field :born_on,
                         class: 'form-control',
                         autocomplete: 'off',
                         placeholder: 'Your birthday' %>
      </div>
      <div class="form-group">
        <div class="form-check mb-3">
          <%= f.check_box :tos_agreement, class: 'form-check-input' %>
          <%= f.label :tos_agreement, class: 'form-check-label' do %>
            I accept the <%= link_to 'Terms and Conditions', '#' %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit 'Sign up', class: 'submit-btn' %>
      </div>
    <% end %>
  </div>
</div>
