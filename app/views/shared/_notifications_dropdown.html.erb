<%= dropdown(container_tag: :li, items_tag: nil, alignment: :end, classname: 'nav-item dropdown-notifications') do |dd| %>
  <% dd.trigger enabled: notifications.size > 0 do %>
    <i class="icofont-notification"></i>
    <% if notifications.size > 0 %>
      <span class="notify-count"><%= notifications.size %></span>
    <% end %>
  <% end %>
  <% if notifications.size > 0 %>
    <% dd.item do %>
      <%= render 'shared/header_dropdown_heading',
                 title: 'Notifications',
                 actions: [{label: 'Settings', url: '#'}, {label: 'Mark all as Read', url: '#'}] %>
    <% end %>
    <% dd.item do %>
      <div class="item-body">
        <% notifications.each do |notification| %>
          <a href="#" class="media">
            <div class="item-img">
              <%= image_tag "/media/figure/notifiy_1.png" %>
            </div>
            <div class="media-body">
              <h6 class="item-title">Diana Jameson</h6>
              <div class="item-time">15 mins ago</div>
              <p>when are nknowen printer took galley of types ...</p>
            </div>
          </a>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <% dd.item do %>
    <div class="item-footer">
      <a href="#" class="view-btn">View All Notification</a>
    </div>
  <% end %>
<% end %>
